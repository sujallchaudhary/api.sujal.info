<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-tools me-2"></i>Skills Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/skills/create" class="btn btn-success btn-custom">
            <i class="fas fa-plus me-2"></i>
            Add New Skill
        </a>
    </div>
</div>

<% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card shadow">
    <div class="card-body">
        <% if (skills.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-tools text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">No Skills Found</h4>
                <p class="text-muted">Start by adding your first skill</p>
                <a href="/admin/skills/create" class="btn btn-success btn-custom">
                    <i class="fas fa-plus me-2"></i>
                    Add First Skill
                </a>
            </div>
        <% } else { %>
            <div class="row">
                <% skills.forEach(skill => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 skill-card">
                            <div class="card-body text-center">
                                <img src="<%= skill.image %>" alt="<%= skill.name %>" 
                                     class="mb-3" style="width: 60px; height: 60px; object-fit: contain;">
                                <h5 class="card-title"><%= skill.name %></h5>
                                <div class="mt-3">
                                    <form method="POST" action="/admin/skills/delete/<%= skill._id %>" 
                                          onsubmit="return confirm('Are you sure you want to delete this skill?')" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash me-1"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>            </div>
        <% } %>
    </div>
</div>
